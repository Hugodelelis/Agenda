<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo.</p>
            <%- include('includes/messages') %>
            <% if(contato._id) { %>
                <form action="/contato/edit/<%= contato._id %>" method="POST">
            <% } else { %>
                <form action="/contato/register" method="POST">
            <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" aria-describedby="emailHelp" placeholder="Nome do contato">
                </div>

                <div class="mb-3">
                    <label class="form-label">Sobrenome</label>
                    <input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" aria-describedby="emailHelp" placeholder="Sobrenome do contato">
                </div>

                <div class="mb-3">
                    <label class="form-label">email</label>
                    <input value="<%= contato.email %>" type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="email do contato">
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefone</label>
                    <input value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" aria-describedby="emailHelp" placeholder="Telefone do contato">
                </div>
                <button type="submit" class="btn btn-primary mb-4">Salvar</button>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>